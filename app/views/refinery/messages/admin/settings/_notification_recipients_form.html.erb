<%= form_for @setting, :url => refinery.messages_admin_setting_path do |f| %>

  <div class='field'>
    <span class='label_with_help'>
      <%= f.label :value, t('.settings_value_name') %>
    </span>
    <%= f.text_field :value, :value => @setting.value, :class => "larger widest" %>
  </div>

  <p>
    <%= t('.hint') %>
  </p>
  <p>
    <%= t('.example') %>
  </p>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :cancel_url => refinery.messages_admin_messages_path,
             :hide_delete => true  %>
<% end %>
